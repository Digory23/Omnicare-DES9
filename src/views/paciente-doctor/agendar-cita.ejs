<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Agendar Cita Médica</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Inicio</a></li>
            <li class="breadcrumb-item active">Agendar Cita</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-5">
        <!-- Profile Image -->
        <div class="card card-primary card-outline">
          <div class="card-header">
            <h3 class="card-title">Datos del Paciente</h3>
          </div>
          <div class="card-body box-profile">
            <div class="text-center">
              <img class="profile-user-img img-fluid img-circle"
                  src="../img/patient1.png"
                  alt="User profile picture">
            </div>
            <p class="text-muted text-center">Foto de Paciente</p>
            <h3 class="profile-username text-center"><%=pac.nombre_user%> <%=pac.apellido_user%></h3>

            <p class="text-muted text-center">Nombre de Paciente</p>

            <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item">
                <b>Cédula</b> <label class="float-right"><%=pac.cedula%></label>
              </li>
              <li class="list-group-item">
                <b>Teléfono</b> <a class="float-right"><%=pac.telefono%></a>
              </li>
              <li class="list-group-item">
                <b>Sexo</b> <a class="float-right"><%=pac.sexo%></a>
              </li>
              <li class="list-group-item">
                <b>Tipo de Sangre</b> <a class="float-right"><%=pac.tipo_sangre%></a>
              </li>
              <li class="list-group-item">
                <b>Email</b> <a class="float-right"><%=pac.email_user%></a>
              </li>
            </ul>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /Profile Image .card -->

          
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        
        <!-- /.col (left) -->
        <div class="col-md-7">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Selección de fecha y hora de cita médica</h3>
            </div>
            <div class="card-body">
              <!-- Date -->
              <style>
                .center {
                display: block;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 5px;
              }

              .card-primary:not(.card-outline)>.card-header {
                background-color: #007EA7 !important;
              }

              .btn-primary{
                  background-color: lightcoral !important;
                  border-color: lightpink !important;
                }

                .btn-block {
                  display: block;
                  width: 50% !important;
                  margin-left: auto;
                  margin-right: auto;
                }

                .float-left{
                  margin-right: 30px;
                }

                /*.btn-default{
                  display: block;
                  width: 20% !important;
                  margin-left: auto;
                  margin-right: auto;
                }*/
              </style>

              <div class="form-group">
                <img src="../img/datetime.png" alt="hora" width="200" height="200" class="center">
                <label>Seleccione la fecha en la que desea asignar la cita y verifique su disponibilidad.</label><br>
                <label>Fecha:</label>
                  <div class="input-group date" id="reservationdate" data-target-input="nearest">
                      <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate"/>
                      <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                      </div>
                  </div>
              </div>
              <!-- /.form group -->
              <div class="bootstrap-timepicker">
                <div class="form-group">
                  <label>Seleccione la hora en la que desea agendar la cita:</label><br>
                  <label>Hora:</label>

                  <div class="input-group date" id="timepicker" data-target-input="nearest">
                    <input type="text" class="form-control datetimepicker-input" data-target="#timepicker"/>
                    <div class="input-group-append" data-target="#timepicker" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="far fa-clock"></i></div>
                    </div>
                    </div>
                  <!-- /.input group -->
                  
                </div>
                <!-- /.form group -->
              </div>
              <a href="#" class="btn btn-primary btn-block"><b>Verificar disponibilidad</b></a>
            </div>
              <!--<div class="card-footer">
              </div>-->

            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col (right) -->
      </div>
      <!-- /.row -->
      
      <div class="card card-default">
        <div class="card-header">
          <h3 class="card-title">Datos enviados por el paciente</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-times"></i></button>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <img src="../img/medicon.png" alt="hora" width="200" height="200" class="float-left">
          <div class="row">
            
            <dl class="row" style="margin-top: 20px;">
              <dt class="col-sm-4">Motivo de la cita</dt>
              <dd class="col-sm-8"><%=solicitudcita.razon%></dd><hr>
            </dl>
         </div><br>
         <center><button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
          Agendar Cita
        </button></center>
          <!-- /.row -->
        </div>
        <!-- /.card-body -->
      </div>